<!DOCTYPE html>
<html>
<head>
  <title>CombatGame<%= " - #{yield(:title)}" if content_for?(:title) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield(:head) %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to (Rails.application.class.to_s.split("::").first+" <small>v#{app_version}</small>").html_safe, root_path %></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>
  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right">
      <% if user_signed_in? %>
          <li class="has-dropdown">
            <a href="#"><%= current_user %></a>
            <ul class="dropdown">
              <li><%= link_to "Account" %></li>
              <li><%= link_to "Logout", logout_path, method: :delete %></li>
            </ul>
          </li>
      <% else %>
          <li><%= link_to "Sign Up", signup_path, data: {no_turbolink: true} %></li>
          <li><%= link_to "Login", login_path, data: {no_turbolink: true} %></li>
      <% end %>
    </ul>

    <!-- Left Nav Section -->
    <ul class="left">
      <li><%= link_to "Game", game_path %></li>
    </ul>
  </section>
</nav>


<div class="container">
  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>
  <%= yield %>
</div>

</body>
</html>
