<!DOCTYPE html>
<html>
<head>
  <title>CombatGame</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="sticky">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to (Rails.application.class.to_s.split("::").first+".<span class='io'>io</span> <small>v#{app_version}</small>").html_safe, root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if user_signed_in? %>
            <li class="has-dropdown">
              <a href="#"><%= current_user %></a>
              <ul class="dropdown">
                <li><%= link_to "Account" %></li>
                <li><%= link_to "Logout", logout_path, method: :delete %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Login", login_path, data: {no_turbolink: true} %></li>
        <% end %>
      </ul>

      <!-- Left Nav Section -->
      <ul class="left">
        <li><%= link_to "Schedule", '#' %></li>
        <li><%= link_to "Add New Task", '#' %></li>
      </ul>
    </section>
  </nav>
</div>
<p class="notice"><%= notice %></p>

<p class="alert"><%= alert %></p>
<%= yield %>

</body>
</html>
